  <!-- Modales -->
  <!--formulario agregar proyecto-->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="false">
    <div class="modal-dialog" role="document">
      
      <div class="modal-content" style="background:green;">
        <div class="modal-header  modalitos">
          <h3 class="modal-title " id="exampleModalLabel" style="color:white; margin-left:29%;">Nuevo proyecto</h3>
          <hr style="border: 0; height: 0; box-shadow: 0 1px 5px 1px green;">
        </div>
        <div class="modal-body  modalitos">
          <form method="POST" id="creare" autocomplete="off">
            <div class="form-group">
              <input type="text" name="nombre" id="nombre" style="text-align:center; color:white;"
                class="form-control nombre" id="validationDefault01 recipient-name " placeholder="Nombre">
            </div>
            <div class="form-group">
              <textarea name="descripcion" class="form-control yo descripcion" id="message-text"
                placeholder="Descripción" style="resize: none; text-align:center; color:white;"></textarea>
            </div>
            <div class="modal-footer  modalitos">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
              <button type="submit" form="creare" class="btn btn-success">Agregar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!--/#formulario agregar proyecto-->

  <!-- Modal de cuenta cuando esta modo free -->
  <div class="modal fade oculto" id="exampleModa2-1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2-1"
