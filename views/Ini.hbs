    <div class="modal-dialog" role="document">
      <div class="modal-content" style="background:green;">
        <div class="modal-header  modalitos">
          <h3 class="modal-title" id="exampleModalLabel2-1" style="color:white; margin-left:29%;">Actulizar cuenta</h3>
          <hr style="border: 0; height: 0; box-shadow: 0 1px 5px 1px green;">
        </div>
        <div class="modal-body  modalitos " id="configurarCuenta" >
          <form autocomplete="off" id="form-cuenta">
            <div class="form-group">
              <img src="img/Visa-MasterCard-1024x393.png" style="margin-left:29%">
              <p style="color:antiquewhite">Actualmente tiene una cuenta tipo libre para cambiar esto puede pasar a la
                version de premium por un modico precio de $ 20.00</p>
              <input type="text" style="text-align:center; color:white;" class="form-control" id="txtTarjeta"
                placeholder="Ingrese el numero de su tarjeta" required>
              
            </div>
          </form>
        </div>
        <div class="modal-footer  modalitos">
          <button type="button" id="cerrar" class="btn btn-secondary" data-dismiss="modal">No gracias</button>
          <button id="guardarCuenta"  class="btn btn-success" >Toma mi dinero</button>
        </div>
      </div>
    </div>
  </div>
  <!-- /# Modal de cuenta cuando esta en modo free -->

  <!-- Modal de administrar perfil -->
  <div class="modal fade oculto" id="exampleModal4" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel4"
    aria-hidden="false">
    <div class="modal-dialog" role="document">
      <div class="modal-content" style="background:green;">
        <div class="modal-header  modalitos">
          <h3 class="modal-title" id="exampleModalLabel2-2" style="color:white; margin-left:29% ;">Actualizar Perfil
          </h3>
          <hr style="border: 0; height: 0; box-shadow: 0 1px 5px 1px green;">
        </div>
        <div class="modal-body  modalitos">
          <form autocomplete="off" id="form-actualizar">
            <div class="form-group group">
              <input type="text" id="nombreUsuario" name="nombre" placeholder="Nombre Usuario">
              <input type="email" id="correoUsuario" name="correo" placeholder="Correo">
              <input type="password" id="contrasenaActual" name="contrasenaActual" placeholder="Contraseña actual">
              <input type="password" id="contrasenaNueva" name="nuevaContrasena" placeholder="Nueva contraseña">
            </div>
          </form>
        </div>
        <div class="modal-footer  modalitos">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>
          <button type="button" id="actualizar"  class="btn btn-success" data-dismiss="modal">Aceptar</button>
        </div>
      </div>
    </div>
  </div>
  <!-- /#Modal de administrar perfil-->

  <!-- Modal de cuenta cuando esta modo pago -->
  <div class="modal fade oculto" id="exampleModa2-2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2-2"
    aria-hidden="false">
    <div class="modal-dialog" role="document">
      <div class="modal-content" style="background:green;">
        <div class="modal-header  modalitos">
