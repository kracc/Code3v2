        </div>
        <div class="modal-footer  modalitos">
          <button type="button"  class="btn btn-success" data-dismiss="modal">Actualizar</button>
        </div>
      </div>
    </div>
  </div>
  <!-- /# Modal de cuenta modo pago-->

  <!--Cerrar Sesión-->
  <div class="modal fade oculto" id="exampleModal3" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2-2"
    aria-hidden="false">
    <div class="modal-dialog" role="document">
      <div class="modal-content" style="background:green;">
        <div class="modal-header  modalitos">
          <hr style="border: 0; height: 0; box-shadow: 0 1px 5px 1px green;">
        </div>
        <div class="modal-body  modalitos">
          <form>
            <div class="form-group">
              <p style="color:antiquewhite; margin-left:38%; ">¿Qué ya te vas?</p>
            </div>
          </form>
        </div>
        <div class="modal-footer  modalitos">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">No aún no</button>
          <button type="button" class="btn btn-success"><a href="/logout">Cerrar Sesión</a> </button>
          <a onclick="signOut();">Sign out</a>
          <script>
            function signOut() {
              var auth2 = gapi.auth2.getAuthInstance();
              auth2.signOut().then(function () {
                console.log('User signed out.');
                location.href = "/logout";
              });
            }
          </script>
        </div>
      </div>
    </div>
  </div>
