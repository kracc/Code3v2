<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      width: 100%;
      height: 100%;
    }

    #container {
      height: 45%;
      width: auto;
      white-space: nowrap;
      overflow: hidden;
      position: relative;
    }

    #htmleditor {
      height: 90%;
      min-height: 50vh;
      width: 33%;
      display: inline-block;
    }

    #csseditor {
      height: 90%;
      min-height: 50vh;
      width: 33%;
      display: inline-block;
    }

    #jseditor {
      height: 90%;
      min-height: 50vh;
      width: 33%;
      display: inline-block;
    }

    #result {
      position: absolute;
      bottom: 0;
      width: 100%;
      height: 35%;
    }
  </style>
</head>

<body>
  <div id="container">
    <div>
      <h1>CODE 3</h1>
      <button class="mb-5" id="guardar" >Guardar</button>
    </div>
    <input id="idCarpeta" type="hidden" value="{{idCarpeta}}">
    <input id="idhtml" type="hidden">
    <input id="idcss" type="hidden">
    <input id="idjs" type="hidden">
    <div id="htmleditor"></div>
    <div id="csseditor"></div>
    <div id="jseditor"></div>
  </div>
  <iframe id="result" frameborder="0"></iframe>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.4.4/ace.js" type="text/javascript"></script>
  <script>
    function update() {
      var res = document
        .getElementById("result")
        .contentWindow
        .document;
      res.open()
      res.write(eh.getValue())
      res.write('<style>' + ec.getValue() + '</style>')
      res.close()

    }

    function setEditor() {
      window.eh = ace.edit("htmleditor");
      eh.setTheme("ace/theme/dracula");
      eh
        .session
        .setMode("ace/mode/html")
      //eh.setValue("<h1>Hello World</h1>")

      window.ec = ace.edit("csseditor");
      ec.setTheme("ace/theme/dracula");
      ec
        .session
        .setMode("ace/mode/css")
      window.ej = ace.edit("jseditor");
      ej.setTheme("ace/theme/dracula");
      ej
        .session
        .setMode("ace/mode/javascript")

      eh
        .getSession()
        .on("change", function () {
          update();
        })
      ec
        .getSession()
        .on("change", function () {
          update();
        })

      ej
        .getSession()
        .on("change", function () {
          update();
        })
    }

    setEditor();
    update();
  </script>
  <script src="jQuery/jquery-3.4.0.min.js"></script>
  <script src= "js/bootstrap.min.js"></script>
  <script src="js/controlador-editor.js"></script>
</body>

</html>